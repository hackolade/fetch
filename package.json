{
  "name": "@hackolade/fetch",
  "version": "1.0.0",
  "description": "A HTTP client that works in the browser and in Electron",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "scripts": {
    "build": "swc -C module.type=es6 ./src -o ./dist/esm/index.mjs && swc -C module.type=commonjs ./src -o ./dist/cjs/index.cjs",
    "docker:build:app": "docker buildx build -t hackolade-fetch-test-app:latest --target hck-fetch-test-app .",
    "docker:compose": "docker compose up --force-recreate --build",
    "docker:run:app": "docker run -it hackolade-fetch-test-app:latest",
    "test": "npm run build && node --test ./test/*.spec.js",
    "test:app": "electron ./test/resources/electron-app/main.js",
    "test:compose:app+proxy": "npm run docker:compose -- app proxy"
  },
  "devDependencies": {
    "@swc/cli": "0.4.0",
    "@swc/core": "1.7.26",
    "debug": "4.3.7",
    "electron": "32.1.0",
    "express": "4.21.0"
  }
}
